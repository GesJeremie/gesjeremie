<div class="experience">
  <div class="experience__background"></div>
  <div class="experience__card">
    <div class="experience__card-details">
      <div class="experience__details">
        <h3 class="heading heading--1 experience__company"><%= company %></h3>
        <h4 class="heading heading--4 experience__role"><%= role %></h4>
        <div class="experience__location">
          <%= image_tag flag, class: 'experience__location-flag' %>
          <span class="experience__location-name"><%= location %></span>
        </div>
        <div class="experience__date"><%= date %></div>
        <div class="experience__about">
          <%= yield %>
        </div>
      </div>
    </div>
    <div class="experience__card-cover" style="background-image: url('<%= image_url(cover) %>')">
    </div>
  </div>
</div>
