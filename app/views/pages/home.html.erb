    </div>
  </div>
</div>


<div class="section section--brands">
  <div class="brands">
    <ul class="brands__list">
      <% config.brands.each do |brand| %>
        <li class="brands__item">
          <%= image_tag "brands/#{brand}.png", class: 'brands__item-image' %>
          </li>
      <% end %>
    </ul>
  </div>
</div>

