<div class="navbar">
  <div class="navbar__wrapper">
    <div class="grid grid--middle">
      <div class="grid__cell grid__cell--50">
        <div class="navbar__logo">
          <%= image_tag 'logo.png', class: 'navbar__logo-image' %>
        </div>
        <div class="navbar__social">
          <%= link_to config.social.facebook, class: 'navbar__social-link' do %>
            <%= inline_svg('social/facebook.svg', class: 'navbar__social-icon') %>
          <% end %>

          <%= link_to config.social.stackoverflow, class: 'navbar__social-link' do %>
            <%= inline_svg('social/stackoverflow.svg', class: 'navbar__social-icon') %>
          <% end %>

          <%= link_to config.social.github, class: 'navbar__social-link' do %>
            <%= inline_svg('social/github.svg', class: 'navbar__social-icon') %>
          <% end %>

          <%= mail_to config.social.email, class: 'navbar__social-link' do %>
            <%= inline_svg('social/gmail.svg', class: 'navbar__social-icon') %>
          <% end %>

          <%= link_to 'https://medium.com/@jeremieges', class: 'navbar__social-link' do %>
            <%= inline_svg('social/medium.svg', class: 'navbar__social-icon') %>
          <% end %>
        </div>
      </div>
      <div class="grid__cell grid__cell--50">
        <div class="navbar__actions">
          <%= link_to 'Contact Me', 'mailto:ges.jeremie@gmail.com', class: 'button' %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="hero">
