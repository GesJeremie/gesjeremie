<div class="stack__section">
  <h4 class="stack__section-title"><%= title %></h4>
  <div class="stack__list">

      <% stack.each_slice(6) do |group| %>
        <div class="grid grid--left">
          <% group.each do |item| %>
            <div class="grid__cell grid__cell--16">
              <div class="stack__item">
                <div class="stack__item-image-container">
                  <%= inline_svg "stack/#{item}.svg", class: 'stack__item-image' %>
                </div>
                <span class="stack__item-title"><%= item.titleize %></span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

  </div>
</div>
